<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.StartPage"
             Title="Quiz Show"
             Padding="20, 20, 20, 60">
    
    <ContentPage.Content>

        <StackLayout Orientation = "Vertical" HorizontalOptions="Center" VerticalOptions="Start">

            <Label Text="Quiz Show"
                   Font="bold,Large" 
                   BackgroundColor="DarkBlue" 
                   TextColor="White" 
                   HorizontalTextAlignment="Center"/>

            <Button x:Name="btnStartQuiz" Text="Start New Quiz" Clicked="btnStartQuizClicked"></Button>
            
            

        </StackLayout>
        
        
    </ContentPage.Content>
</ContentPage>